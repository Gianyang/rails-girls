<h1>Listing photos</h1>

<% @photos.in_groups_of(3) do |group| %>
  <table class="table">
    <% group.compact.each do |photo| %>
      <div class="span4">
        <td><%= image_tag photo.file_url(:thumb) if photo.file.present?%></td>
        <h4><%= link_to photo.title, photo %></h4>
        <%= photo.description %>
      </div>
    <% end %>
  </table>
<% end %>